{
    "extends": [
        "tslint-config-airbnb"
    ],
    "rules": {
        /* Because of bug: https://github.com/babel/babel/issues/8692, disable this rule when it's fixed*/
        "no-parameter-properties": true,
        "import-name": false,
        "variable-name": false,
        "ter-arrow-parens": [
            true,
            "as-needed"
        ],
        "ter-computed-property-spacing": false,
        "max-line-length": [
            true,
            {
                "limit": 100,
                "ignore-pattern": "(^import)+|(`)+"
            }
        ],
        "align": false
    }
}